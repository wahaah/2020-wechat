/* pages/news/news.wxss */
/*全国*/
.container {
    position: absolute;
    top: 190px;
    bottom: 0;
    left: 0;
    right: 0;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    clear: both;
  } 
  
ec-canvas {
    width: 100%;
    height: 100%;
  }
.item-container{
    display: inline-block;
    width: 50%;
     border: 5px solid #ffffff;
     height: 90rpx;
     line-height: 90rpx;
     margin-bottom:4rpx;
     text-align: center; 
     background: #f6c8fb;
     color: #ffffff;

     
   }
   /* 首页导航 */
   .nav_wrap {
     margin-top: 10rpx;

   }
   .nav {
       white-space: nowrap;
       padding: 5rpx 0;
   }
   .nav_item {
       padding: 20rpx 45rpx;
       font-size: 30rpx;
       display: inline-block;
   }
   .nav_item.active{
       border-bottom: 5rpx solid #de688b;
       color: #de688b;
   }
   .china {
     margin-top: 7px;
   }
   .box {
     width: 100%;
   }
   image {
     width: 100%;
     height: 100%;
   }
   .sort {
       /* flex: 1; */
       display: inline-block;
       /* width: 24%; */
       width: 179rpx;
       text-align: center;
       background-color: rgb(187, 236, 240);
       margin-right: 5rpx;
       margin-top: 4rpx;
       font-size: 30rpx
   }

   /* 本地疫情 -------------------------------------------------*/
 input[type="text"] {
     display: inline-block;
     border: 1px solid #000;
     width: 73%;
 }
 input[type="button"] {
     display: inline-block;
     width: 25%;
     background-color: rgb(146, 231, 184);
 }
 
.blank {
  width: 100%;
  height: 2px;
  background-color: #eee;
}
.search {
  border-bottom: 2px solid #eee;
  border-top: 2px solid #eee;
  background-color:#EBF1FB;
}
  .slide {
   height: 128px;
   padding: 1px 10px;
   width: 93%;
   text-align: center;
 }
.slideItem {
  height: 26px;
  line-height: 26px;
  display: block;
  width: 100%;
  font-size: 34rpx;
}
/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.localTitle {

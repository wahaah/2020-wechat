/* pages/toDoList/toDoList.wxss */

.con {
    margin: 0 10px;
}

.blank {
    width: 100%;
    height: 20px;
}

.flex {
    display: flex;
    margin-top: 5px;
}

.menu.all {
    margin-right: 2px;
    border-right: 1px solid gray;
}

.menu {
    display: inline-block;
    width: 50%;
    /* border: 5px solid #ffffff; */
    height: 70rpx;
    line-height: 80rpx;
    margin: 10rpx 0;
    text-align: center;
    background-color: #fff;
    color: gray;
}

/* .menu:hover {
    background-color: rgb(218, 125, 194);
} */

input {
    height: 30px;
}
.title {
  text-align:center;
  font-size:43rpx;
  font-weight:800;
  height:60rpx;
  line-height:60rpx;
  margin:10rpx 0;

}

input[type='text'] {
    width: 70%;
    display: inline-block;
    border: 1px solid rgb(100, 95, 95);
    /* text-indent: 2em; */
    margin-right: 2px;
    border-radius:8rpx;
    height:65rpx;

}

input[type='button'] {
    background-color: rgb(75, 221, 55);
    color: #fff;
    width: 28%;
    display: inline-block;
    border: 1px solid #D8EDF7;
    text-align: center;
    height:67rpx;
    border-radius:4rpx;
    line-height:67rpx;

}
.checkbox{
  border-top: 4rpx solid gray;
  border-bottom: 4rpx solid gray;
}

.check {
    margin-left: 15px;
    margin-top: 6px;
    border-bottom: 1px solid #eee;
}

.done {
    float: left;
    left: 40px;
    color: #fff;
    width: 30%;
    height: 40px;
    line-height: 40px;
    margin-top: 10px;
    background-color: rgb(127, 207, 253);
    position:fixed;
    bottom:20rpx;

}

.del {
    float: right;
    right: 40px;
    color: #fff;
    width: 30%;
    height: 40px;
    line-height: 40px;
    margin-top: 10px;
    background-color: rgb(185, 13, 7);
    position:fixed;
    bottom:20rpx;
}

text {
    font-size: 14px;
}

.time {
    float: right;
    margin-right: 10px;
}
.sourceUrl {
  font-size: 12px;
  /* color: red; */
}
.underline{
    text-decoration:line-through;
    color: red;
}
.show {
  display: block;
}
.hidden {
  display: none;
}
.aborder {
  border-left: 1px solid gray;
  border-top: 1px solid gray;
  border-bottom: 1px solid gray;
  background-color: #eee;
}

.fborder{
  border-right: 1px solid gray;
  border-top: 1px solid gray;
  border-bottom: 1px solid gray;
  background-color: #eee;
}